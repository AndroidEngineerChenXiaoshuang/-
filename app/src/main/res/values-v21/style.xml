<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="statusBar" parent="AppTheme">
        <item name="android:statusBarColor">#000</item>
    </style>
    <style name="ContentAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/popupwindow_startanimation</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exitanimation</item>
    </style>
    <style name="TestAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/test_start</item>
        <item name="android:windowExitAnimation">@anim/test_exit</item>
    </style>

</resources>