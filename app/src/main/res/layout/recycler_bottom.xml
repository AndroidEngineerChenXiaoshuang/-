<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lines8">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/cunqianimg"
                android:scaleType="centerCrop"
                android:src="@drawable/cunqian"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日常生活"
                android:textSize="16dp"
                android:textColor="#8d8d8d"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:id="@+id/text_cunqian"
                android:layout_toLeftOf="@+id/cunqianimg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12000.00"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:textColor="#5a5a5a"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/text_cunqian"
                android:id="@+id/cunqianMoney" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>